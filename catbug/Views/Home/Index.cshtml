@using catbug.Data

@inject ApplicationDbContext Context

@{
    ViewData["Title"] = "Home Page";
}

<div class="color-secondary-bg">
    <div class="container portfolio-filtering">
        <div class="title"></div>
        <div class="sorting">
            <div class="description"></div>
            @foreach (Category category in Context.Categories)
            {
                <label class="simplecheckbox">
                    <input type="checkbox" name="category" value="@category.Id" />
                    <span>@category.Title</span>
                </label>
            }
        </div>
    </div>
</div>
<div class="portfolio">
    <partial name="_portfolioPartialView" model="Context.Entries.OrderByDescending(o => o.Id).ToList()" />
</div>