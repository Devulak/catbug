@{
    ViewData["Name"] = "CatBug";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (@ViewData["Title"] == null)
    {
        <title>@ViewData["Name"]</title>
    }
    else
    {
        <title>@ViewData["Title"] - @ViewData["Name"]</title>
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,300,400,500,700,800,900&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/init.css">
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/nav.css">
    <link rel="stylesheet" href="~/css/portfolio.css">
    <link rel="stylesheet" href="~/css/entry.css">
    <link rel="stylesheet" href="~/css/form.css">
</head>
@{
    string darkvision = "";
    if (Context.Request.Cookies["darkvision"] != null && bool.Parse(Context.Request.Cookies["darkvision"]) != false)
    {
        darkvision = "dark";
    }
}
<body class="color-primary color-primary-bg @darkvision">
    <header>
        <partial name="_HiddenMenuPartial" />
        <nav class="color-primary-bg">
            <a asp-controller="Home" asp-action="Index">
                <img class="-invertable" src="~/images/catbug.svg">
            </a>
            <a asp-controller="Home" asp-action="Index"> Portfolio entries </a>
            <a asp-controller="LearningCycles" asp-action="List"> Learning cycles </a>
            <input placeholder="Search...">
            <div onclick="darkvisionToggle()">
                <img class="-invertable" src="~/images/brightness_3-24px.svg">
                <img class="-invertable" src="~/images/brightness_5-24px.svg">
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer>
        <div class="container">
            &copy; @ViewData["name"]. Coded with ❤️ by Devulak/ZeroXitreo. All rights reserved to their respective owners. - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/darkvision.js" asp-append-version="true"></script>
    <script src="~/js/LiveForm.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
